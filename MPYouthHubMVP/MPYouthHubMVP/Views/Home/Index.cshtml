@*@model  FoodOrders.Application.User.User*@
@{
    ViewBag.Title = "Home";
}

<div class="frameborder">
    <div class="wrap">
        <table width="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    <div class="header">
                        <table border="0" width="100%">
                            <tr>
                                <td>
                                    <a href="#"><img id="img2" src="~/Content/images/logo.png" class="logo-img" alt="MP Youth HUB" /></a>
                                </td>


                                <td style="text-align: center; vertical-align:bottom" width="150"></td>

                            </tr>
                        </table>
                    </div>
                </td>
            </tr>
            <tr>
                <td style="vertical-align: top">
                    <div class="contentWrap" style="padding-right: 17px; padding-left: 15px;">
                        <table border="0" width="100%" style=" margin-top:30px;">
                            <tr>

                                <td class="boolHideMe" style="width:30px"></td>
                                <td style="width:350px; vertical-align:bottom" class="boolStretchMe">
                                    <div class="fixedheightSpacer"></div>
                                    <div class="secureloginBox">


                                        <form method="post">


                                            <span class="loginLable">Email:</span><br />
                                            @Html.TextBox("username")
                                            <div class="fixedheightSpacer"></div>

                                            <span id="PasswordLable" runat="server" class="loginLable">Password:</span><br />
                                            @Html.Password("password")
                                            <input type="text" name="AspNetSubmitBugHack" style="display: none" />

                                            <div class="fixedheightSpacer"></div>

                                            <table width="280px" border="0" cellpadding="0" cellspacing="0" style="float: left">
                                                <tr>
                                                    <td style="text-align:left">
                                                        <button id="btnLogin" class="loginbutton">Login</button>

                                                        <br />
                                                        @if (ViewBag.LoginError != null)
                                                        {
                                                            <div style="clear: both;padding-bottom: 30px"></div>

                                                            <div style="color: red">
                                                                <span class="glyphicon glyphicon-remove-sign"></span>
                                                                <span style="font-size: 1.1em">Incorrect Login Credentials</span>
                                                            </div>
                                                            <div style="clear: both"></div>
                                                        }
                                                    </td>

                                                </tr>
                                            </table>
                                            <br />
                                        </form>
                                    </div>
                                    <div class="fixedheightSpacer"></div>

                                </td>
                                <td class="boolHideMe" style="width:30px"></td>
                            </tr>
                        </table>
                    </div>
                </td>
            </tr>

        </table>
    </div>
</div>